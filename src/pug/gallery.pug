doctype html
html
    include includes/head
    body
        h1=config.title
        h2 User Gallery
        select(name="user" id="userdropdown")
        br 
        canvas(id="banner")
        button(class="button" onclick="window.history.back()" id="back-button") Back

        a(href="credits.html" class="no-under")
            button(class="button" o id="credits-button") Credits

        script(type="application/javascript").
            globalThis.VERSION = "#{version}";
            globalThis.DEFAULT_FLAGS = 0b0;

        if js
            script(type="module") !{js.gallery}
        else 
            script(src="./dist/gallery.js" type="module")